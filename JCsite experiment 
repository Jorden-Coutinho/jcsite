  <script>
    const toggleBtn = document.getElementById('menu-toggle');
    const sideMenu = document.getElementById('side-menu');

    toggleBtn.addEventListener('click', () => {
      toggleBtn.classList.toggle('open');
      sideMenu.classList.toggle('open');
    });
